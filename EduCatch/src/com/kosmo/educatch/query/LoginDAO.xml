<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kosmo.educatch.dao.LoginMapper">

	<!--  loginCheck(일반유저) -->
	<select id="loginCheck" parameterType="login" resultMap="login">
			SELECT
				A.MNAME,
				A.MID
				
			FROM	MEMBER A
			WHERE   A.MID = #{mid}
			AND		A.MPW = #{mpw}
				

	</select>
	
	<!--  회원정보보기  -->
	<select id="viewMember" parameterType="view" resultMap ="view">
			SELECT 
				A.MNAME,
				A.MID
				
			FROM MEMBER A
			WHERE A.MID = #{mid}
			AND   A.MPW = #{mpw}	
	
	</select>

</mapper>